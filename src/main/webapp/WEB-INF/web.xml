<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
         <servlet>
         	<servlet-name>login</servlet-name>
         	<servlet-class>com.LoginServerlet</servlet-class>
         </servlet>
         <servlet-mapping>
         	<servlet-name>login</servlet-name>
         	<url-pattern>/log</url-pattern>
         </servlet-mapping>     
         
         <servlet>
         	<servlet-name>Room</servlet-name>
         	<servlet-class>com.roomServlet2</servlet-class>
         </servlet>
         <servlet-mapping>
         	<servlet-name>Room</servlet-name>
         	<url-pattern>/rom</url-pattern>
         </servlet-mapping>   
         <servlet>
         	<servlet-name>Room2</servlet-name>
         	<servlet-class>com.AddRoomServlet</servlet-class>
         </servlet>
         <servlet-mapping>
         	<servlet-name>Room2</servlet-name>
         	<url-pattern>/romAdd</url-pattern>
         </servlet-mapping> 
          <servlet>
         	<servlet-name>Room3</servlet-name>
         	<servlet-class>com.DeleteRoom</servlet-class>
         </servlet>
         <servlet-mapping>
         	<servlet-name>Room3</servlet-name>
         	<url-pattern>/romDel</url-pattern>
         </servlet-mapping> 
          <servlet>
         	<servlet-name>Room4</servlet-name>
         	<servlet-class>com.ConfirmBookingServlet</servlet-class>
         </servlet>
         <servlet-mapping>
         	<servlet-name>Room4</servlet-name>
         	<url-pattern>/ConBooking</url-pattern>
         </servlet-mapping> 
         <servlet>
         	<servlet-name>Room5</servlet-name>
         	<servlet-class>com.Dine_inCustomerServlet</servlet-class>
         </servlet>
         <servlet-mapping>
         	<servlet-name>Room5</servlet-name>
         	<url-pattern>/ConReservation</url-pattern>
         </servlet-mapping> 
</web-app>
         